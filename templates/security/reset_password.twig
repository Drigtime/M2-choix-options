{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Nouveau mot de passe
{% endblock %}

{% block body %}
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Nouveau mot de passe</h3>
                            </div>
                            <div class="card-body">
                                <div class="small mb-3 text-muted">
                                    Veuiilez saisir votre nouveau mot de passe
                                </div>
                                {{ form_start(form) }}
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_label(form.password.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_errors(form.password.first) }}
                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_label(form.password.second, 'Confirmation du mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_errors(form.password.second) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}