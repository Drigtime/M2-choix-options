{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Récupération de mot de passe
{% endblock %}

{% block body %}
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Récupération de mot de passe</h3>
                            </div>
                            <div class="card-body">
                                <div class="small mb-3 text-muted">
                                    Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre
                                    mot de passe.
                                </div>
                                {{ form_start(form) }}
                                <div class="form-floating b-3">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="small" href="{{ path('app_login') }}">Retour à la page de connexion</a>
                                    <button type="submit" class="btn btn-primary">Réinitialiser</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small">
                                    <a href="{{ path('app_register') }}">Besoin d'un compte? Inscrivez-vous</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}