{% extends 'base.html.twig' %}

{% block title %}AnneeFormation index{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Liste des ann√©es de formation</h4>
        </div>
        <div class="flex-shrink-0">
            <a href="{{ path('app_annee_formation_new') }}" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i>
                Ajouter une annee formation
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for annee_formation in annee_formations %}
            <tr>
                <td>{{ annee_formation.id }}</td>
                <td>{{ annee_formation.label }}</td>
                <td class="text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_annee_formation_edit', {'id': annee_formation.id}) }}"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('app_annee_formation_edit', {'id': annee_formation.id}) }}"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune annee formation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
