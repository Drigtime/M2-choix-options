{% if bloc_options %}
    <table class="table table-bordered">
        <thead>
        <tr>
            {% for bloc_option in bloc_options %}
                <th scope="col">{{ bloc_option.blocUE.blocUECategory.label }} - {{ bloc_option.nbUEChoix }} Choix</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for bloc_option in bloc_options %}
                <td>
                    {% for ue in bloc_option.ues %}
                        <div>
                            <a href="{{ path('app_ue_show', {'id': ue.id}) }}">{{ ue.label }}</a>
                        </div>
                    {% endfor %}
                </td>
            {% endfor %}
        </tr>
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">
        Aucun bloc d'UE n'a été créé pour ce parcours.
    </div>
{% endif %}