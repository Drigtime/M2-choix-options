{% if bloc_options %}
    <table class="table">
        {% for bloc_option in bloc_options %}
            <tr>
                <th>{{ bloc_option.blocUE.blocUECategory.label }}</th>
                <td>
                    {% for ue in bloc_option.ue %}
                        <span class="badge bg-primary">{{ ue.label }}</span>
                    {% endfor %}
                </td>
                <td>
                    <div class="btn-group">
                        <a id="add-bloc-option"
                           data-action="load-form" data-modal-title="Modifier le bloc UE"
                           data-custom="editBlocOption"
                           data-url="{{ path('app_campagnechoix_edit_bloc_option', {'id': campagne.id, 'blocOption': bloc_option.id}) }}"
                           data-ajax-target="#list-bloc-option"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a id="delete-bloc-option"
                           data-action="load-form" data-modal-title="Suppression du bloc d'UE"
                           data-url="{{ path('app_campagnechoix_delete_bloc_option', {'id': campagne.id, 'blocOption': bloc_option.id}) }}"
                           data-ajax-target="#list-bloc-option"
                           class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p>Aucun bloc UE n'a été trouvé.</p>
{% endif %}
