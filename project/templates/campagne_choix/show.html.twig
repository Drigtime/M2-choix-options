{% extends 'base.html.twig' %}

{% block title %}CampagneChoix{% endblock %}

{% block body %}
{#    <div class="col-xxl-6 col-xl-8 col-lg-8 col-md-8 col-sm-10 col-12 mx-auto">#}
        <div class="d-flex">
            <div class="flex-grow-1">
                <h4>Campagne de choix</h4>
            </div>
            <div class="flex-shrink-0">
                <div class="d-flex gap-2">
                    {{ include('campagne_choix/_delete_form.html.twig') }}

                    <a href="{{ path('app_campagne_choix_edit', {'id': campagne_choix.id}) }}"
                       class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                        Modifier
                    </a>

                    <a href="{{ path('app_campagne_choix_index') }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-arrow-left"></i>
                        Retour Ã  la liste
                    </a>
                </div>
            </div>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campagne_choix.id }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ campagne_choix.dateDebut ? campagne_choix.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ campagne_choix.dateFin ? campagne_choix.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>


    <div class="card">
        <div class="card-header">
            <div class="d-flex">
                <div class="flex-grow-1">
                    Liste des blocs d'option
                </div>
                <div class="flex-shrink-0">
                    <div class="d-flex gap-2">
                        <a id="add-bloc-ue"
                           data-action="load-form" data-modal-title="Ajouter un bloc d'option"
                           data-url="{{ path('app_campagnechoix_add_bloc_option', {'id': campagne_choix.id}) }}"
                           data-ajax-target="#list-bloc-option"
                           class="btn btn-sm btn-primary">
                            <i class="fas fa-plus"></i>
                            Ajouter un bloc d'option
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div id="list-bloc-option" class="card-body">
            {{ include('campagne_choix/bloc_option/_list.html.twig', {'bloc_options': campagne_choix.blocOptions, 'campagne': campagne_choix}) }}
        </div>
    </div>

    {#    </div>#}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('campagne_choix_show') }}
{% endblock %}