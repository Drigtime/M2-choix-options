<form method="post" action="{{ path('app_etudiant_delete', {'id': etudiant.id}) }}"
      onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet étudiant ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etudiant.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fa fa-trash"></i>
        Supprimer
    </button>
</form>