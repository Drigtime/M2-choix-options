{% extends 'base.html.twig' %}

{% block title %}Hello UserGestionController!
{% endblock %}

{% block body %}
	<h1>Etudiants</h1>

	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-6 pt-0 d-grid gap-2" style="border-radius:5px">

				<button type="button" class="btn-import btn btn-lg btn-block pt-0 px-0" style="border-radius:5px">

					<div class="col-12 px-0 py-0" style="height:70px;border-top-left-radius:5px;border-top-right-radius:5px;background-color:grey">
						<h4 class="text-white pt-3">Importer des étudiants</h4>
					</div>
					<div class="col-12" style="height:250px">
						<i class="fas fa-file-import fa-9x pt-3" style="color:grey"></i>
					</div>
					<div class="col-12">
						<p style="color:grey">Le fichier doit être en format CSV</p>
					</div>
				</button>
			</div>
			<div class="col-6 pt-0 d-grid gap-2" style="border-radius:5px">

				<button type="button" class="btn-import btn btn-lg btn-block pt-0 px-0" style="border-radius:5px">

					<div class="col-12 px-0 py-0" style="height:70px;border-top-left-radius:5px;border-top-right-radius:5px;background-color:grey">
						<h4 class="text-white pt-3">Exporter des étudiants</h4>
					</div>
					<div class="col-12" style="height:250px">
						<i class="fas fa-file-export fa-9x pt-3" style="color:grey"></i>
					</div>
					<div class="col-12">
						<p style="color:grey">Le fichier sera en format CSV</p>
					</div>
				</button>
			</div>
		</div>

        <h3>Liste des étudiants</h3>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Prenom</th>
					<th scope="col">Année</th>
					<th scope="col">Spécialité</th>
				</tr>
			</thead>
			<tbody>
				
			</tbody>
		</table>

	</div>
{% endblock %}
