            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ue_index') }}">back to list</a>

    <a href="{{ path('app_ue_edit', {'id': ue.id}) }}">edit</a>

    {{ include('ue/_delete_form.html.twig') }}
