{% extends 'base.html.twig' %}

{% block title %}UE{% endblock %}

{% block body %}
    <h1>UE</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ue.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ ue.label }}</td>
            </tr>
            <tr>
                <th>Bloc UE Categorie</th>
                <td>
                    {% if ue.blocUECategory %}
