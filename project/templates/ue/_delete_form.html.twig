<form method="post" action="{{ path('app_ue_delete', {'id': ue.id}) }}"
      onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ue.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fa fa-trash"></i>
        Supprimer
    </button>
</form>
