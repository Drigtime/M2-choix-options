{% extends 'base.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Groupe</h4>
        </div>
        <div class="flex-shrink-0">
            <div class="d-flex gap-2">
                {{ include('groupe/_delete_form.html.twig') }}
                <a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-edit"></i>
                    Modifier
                </a>
                <a href="{{ path('app_groupe_index') }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-arrow-left"></i>
                    {{ 'utils.back_to_list'|trans }} des groupes
                </a>
            </div>
        </div>
    </div>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ groupe.id }}</td>
        </tr>
        <tr>
            <th>Libellé</th>
            <td>{{ groupe.label }}</td>
        </tr>
        <tr>
            <th>UE</th>
            <td>
                <a href="{{ path('app_ue_show', {'id': groupe.ue.id}) }}">
                    {{ groupe.ue.label }}
                </a>
            </td>
        </tr>
        </tbody>
    </table>

    <div class="accordion mb-3" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true"
                        aria-controls="panelsStayOpen-collapseTwo">
                    Liste des étudiants
                </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show"
                 aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body p-2">
                    <div class="table-responsive">
                        <table class="table m-0">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>E-Mail</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for etudiant in groupe.etudiants %}
                                <tr>
                                    <td>{{ etudiant.id }}</td>
                                    <td>{{ etudiant.nom }}</td>
                                    <td>{{ etudiant.prenom }}</td>
                                    <td>{{ etudiant.mail }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
