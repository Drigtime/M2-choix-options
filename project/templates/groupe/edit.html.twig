{% extends 'base.html.twig' %}

{% block title %}Edition groupe{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Modification d'un groupe</h4>
        </div>
        <div class="flex-shrink-0">
            <div class="d-flex gap-2">
                {{ include('groupe/_delete_form.html.twig') }}

                <a href="{{ path('app_groupe_index') }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-arrow-left"></i>
                    {{ 'utils.back_to_list'|trans }} des groupes
                </a>
            </div>
        </div>
    </div>

    {{ include('groupe/_form.html.twig', {'button_label': 'Modifier'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('groupe_form') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('groupe_form') }}
{% endblock %}