{% extends 'passage_annee/_base_form_step.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}
    <div>
        {{ form_start(form) }}
        <div class="d-flex my-3">
            <h4 class="mt-3 mb-0">
                Étape 1.2 - Spécification des UEs reussi par les élèves redoublants en {{ anneeFormation }}
            </h4>
            <div class="ms-auto d-flex align-content-center flex-wrap">
                <div class="btn-group">
                    <a href="{{ path('app_passage_annee_worflow_step_1', {'anneeFormation': anneeFormation}) }}"
                       class="btn btn-secondary">
                        Précédent
                    </a>
                    {% if anneeFormation == 'M1' %}
                        <button type="submit" class="btn btn-primary">Valider</button>
                    {% else %}
                        <button type="submit" class="btn btn-primary">Suivant</button>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row g-4 mb-3">
            {% for etudiant in form.etudiants %}
                {% set etudiantId = etudiant.vars.value.id %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <div class="card-header py-1 px-2">
                            {{ etudiant.vars.value.nom }} {{ etudiant.vars.value.prenom }}
                        </div>
                        <div class="card-body p-2">
                            {% set groupedUes = {} %}
                            {% for blocUE in etudiant.vars.value.parcours.blocUEs %}
                                {% set groupedUes = groupedUes|merge({(blocUE.blocUECategory.label): []}) %}
                                {% for ue in blocUE.ues %}
                                    {% set groupedUes = groupedUes|merge({(blocUE.blocUECategory.label): groupedUes[blocUE.blocUECategory.label]|merge([ue])}) %}
                                {% endfor %}
                            {% endfor %}

                            {% for key in groupedUes|keys %}
                                <h5>{{ key }}</h5>
                                {% for etudiantUE in etudiant.etudiantUEs %}
                                    {% if etudiantUE.vars.value.ue in groupedUes[key] %}
                                        {{ form_row(etudiantUE.acquis, {'label': etudiantUE.vars.value.ue.label}) }}
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-end mb-3">
            <div class="btn-group">
                <a href="{{ path('app_passage_annee_worflow_step_1', {'anneeFormation': anneeFormation}) }}"
                   class="btn btn-secondary">
                    Précédent
                </a>
                {% if anneeFormation == 'M1' %}
                    <button type="submit" class="btn btn-primary">Valider</button>
                {% else %}
                    <button type="submit" class="btn btn-primary">Suivant</button>
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('passage_annee_form') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('passage_annee_form') }}
{% endblock %}

