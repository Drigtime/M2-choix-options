{#                                            {{ blocUeUe.ue.label }}#}
{#                                        </label>#}
{#                                    </div>#}
{#                                {% endfor %}#}
{#                            {% endfor %}#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-end mb-3">
            <div class="btn-group">
                <a href="{{ path('app_passage_annee_worflow_step_1', {'anneeFormation': anneeFormation}) }}"
                   class="btn btn-secondary">
                    Précédent
                </a>
                {% if anneeFormation == 'M1' %}
                    <button type="submit" class="btn btn-primary">Valider</button>
                {% else %}
                    <button type="submit" class="btn btn-primary">Suivant</button>
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('passage_annee_form') }}
{% endblock %}

{% block javascripts %}
