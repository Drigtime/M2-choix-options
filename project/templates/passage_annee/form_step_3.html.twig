{% extends 'passage_annee/_base_form_step.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}
    <form action="{{ path('app_passage_annee_workflow_step_3') }}" method="post" id="form-step-2" data-form-data="{{ formData|json_encode }}">
        <div class="d-flex my-3">
            <h4 class="mt-3 mb-0">
                Étape 3 - Rattachement des étudiants aux parcours de M2
            </h4>
            <div class="ms-auto d-flex align-content-center flex-wrap">
                <div class="btn-group">
                    <a href="{{ path(previousRoute) }}"
                       class="btn btn-secondary">
                        Précédent
                    </a>
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group mb-3">
                    <label for="courses-list">Liste des parcours</label>
                    <select id="courses-list" class="form-control">
                        {% for parcour in parcours %}
                            <option value="{{ parcour.id }}">{{ parcour }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Liste des étudiants -->
            <div class="col-sm-6">
                <button type="button" id="to-right" class="btn btn-primary w-100 mb-2">
                    Ajouter au parcours
                    <i class="fas fa-arrow-right"></i>
                </button>
                <div class="form-group">
                    <label for="students-list">Liste des étudiants</label>
                    <select id="students-list" class="form-control" multiple style="height: 500px">
                        {% for etudiant in etudiants %}
                            <option value="{{ etudiant.id }}">{{ etudiant }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <!-- Liste des parcours -->
            <div class="col-sm-6">
                <button type="button" id="to-left" class="btn btn-primary w-100 mb-2">
                    <i class="fas fa-arrow-left"></i>
                    Retirer du parcours
                </button>
                <div class="form-group">
                    <label for="current-course-list">Etudiants dans le parcours sélectionné</label>
                    <select id="current-course-list" class="form-control" multiple style="height: 500px"></select>
                </div>
            </div>
        </div>
        <div class="d-flex my-3">
            <div class="ms-auto d-flex align-content-center flex-wrap">
                <div class="btn-group">
                    <a href="{{ path(previousRoute) }}"
                       class="btn btn-secondary">
                        Précédent
                    </a>
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('passage_annee_form_step_2') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('passage_annee_form_step_2') }}
{% endblock %}

