{% extends 'base.html.twig' %}

{% block title %}BlocUECategory index{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Liste des catégorie de bloc UE</h4>
        </div>
        <div class="flex-shrink-0">
            <a href="{{ path('app_bloc_ue_category_new') }}" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i>
                Ajouter une catégorie de bloc UE
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bloc_u_e_category in bloc_u_e_categories %}
            <tr>
                <td>{{ bloc_u_e_category.id }}</td>
                <td>{{ bloc_u_e_category.label }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('app_bloc_ue_category_show', {'id': bloc_u_e_category.id}) }}"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('app_bloc_ue_category_edit', {'id': bloc_u_e_category.id}) }}"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
