{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Liste des parcours</h4>
        </div>
        <div class="flex-shrink-0">
            <a href="{{ path('app_parcours_new') }}" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i>
                Ajouter un parcours
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ann√©e de formation</th>
                <th>Nom du parcours</th>
                <th>Bloc UEs</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.anneeFormation }}</td>
                <td>{{ parcour.label }}</td>
                <td>
                    {% for bloc in parcour.blocUEs %}
                        <span class="badge bg-primary">{{ bloc.blocUECategory.label }}</span>
                    {% endfor %}
                </td>
                <td class="text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_parcours_show', {'id': parcour.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_parcours_edit', {'id': parcour.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
