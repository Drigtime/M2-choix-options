{% extends 'base.html.twig' %}

{% block title %}Parcours{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Parcours</h4>
        </div>
        <div class="flex-shrink-0">
            <div class="d-flex gap-2">
                {{ include('parcours/_delete_form.html.twig') }}

                <a href="{{ path('app_parcours_edit', {'id': parcour.id}) }}"
                   class="btn btn-sm btn-primary">
                    <i class="fas fa-edit"></i>
                    Modifier
                </a>

                <a href="{{ path('app_parcours_index') }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-arrow-left"></i>
                    {{ 'utils.back_to_list'|trans }}
                </a>
            </div>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ parcour.id }}</td>
        </tr>
        <tr>
            <th>Ann√©e de formation</th>
            <td>{{ parcour.anneeFormation }}</td>
        </tr>
        <tr>
            <th>Nom du parcours</th>
            <td>{{ parcour.label }}</td>
        </tr>
        </tbody>
    </table>

    <h5>Liste des bloc UE</h5>
    {{ include('parcours/bloc_ue/_list.html.twig', {'bloc_ues': parcour.blocUes, 'parcours': parcour}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('parcours_show') }}
{% endblock %}