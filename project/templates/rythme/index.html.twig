    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rythme in rythmes %}
            <tr>
                <td>{{ rythme.id }}</td>
                <td>{{ rythme.label }}</td>
                <td>
