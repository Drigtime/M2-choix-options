{% extends 'base.html.twig' %}

{% block title %}Rythme index{% endblock %}

{% block body %}
    <div class="d-flex">
        <div class="flex-grow-1">
            <h4>Liste des rythmes</h4>
        </div>
        <div class="flex-shrink-0">
            <a href="{{ path('app_rythme_new') }}" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i>
                Ajouter un rythme
            </a>
        </div>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rythme in rythmes %}
            <tr>
                <td>{{ rythme.id }}</td>
                <td>{{ rythme.label }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('app_rythme_show', {'id': rythme.id}) }}"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('app_rythme_edit', {'id': rythme.id}) }}"
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
